package com.wwh.dao;

import java.math.BigDecimal;

public interface IBusinessDao {

	/**
	 * 
	 * @Title: getTodayBusinessAmount 
	 * @Description: 获取用户今天的所有招商分红
	 * @param userId
	 * @return
	 * @return: BigDecimal
	 */
	BigDecimal getTodayBusinessAmount(Long userId);
	
	/**
	 * 
	 * @Title: getNearlyThirtyDaysBusinessAmount 
	 * @Description: 获取用户近30天的分红
	 * @param userId
	 * @return
	 * @return: BigDecimal
	 */
	BigDecimal getNearlyThirtyDaysBusinessAmount(Long userId);
	
	/**
	 * 
	 * @Title: getUserBusinessCounter 
	 * @Description: 获取用户的招商数量
	 * @param userId
	 * @return
	 * @return: Integer
	 */
	Integer getUserBusinessCounter(Long userId);
}
